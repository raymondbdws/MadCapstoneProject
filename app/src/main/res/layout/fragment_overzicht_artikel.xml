<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.ui.ArtikelOverzichtFragment">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvProducts"
        android:layout_width="410dp"
        android:layout_height="605dp"
        android:layout_marginTop="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/spinnerProducts" />

    <Spinner
        android:id="@+id/spinnerProducts"
        android:layout_width="290dp"
        android:layout_height="36dp"
        app:layout_constraintBottom_toBottomOf="@+id/tvSort"
        app:layout_constraintEnd_toEndOf="@+id/tilSearchProducts"
        app:layout_constraintTop_toTopOf="@+id/tvSort"
        app:layout_constraintVertical_bias="0.588" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/tilSearchProducts"
        android:layout_width="378dp"
        android:layout_height="60dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/itSearchProducts"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/it_search_hint" />
    </com.google.android.material.textfield.TextInputLayout>

    <TextView
        android:id="@+id/tvSort"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="@string/spinner_sort"
        app:layout_constraintStart_toStartOf="@+id/tilSearchProducts"
        app:layout_constraintTop_toBottomOf="@+id/tilSearchProducts" />
</androidx.constraintlayout.widget.ConstraintLayout>